<%- include('../partials/header'); -%>

<div class="container form-title" style="width: 350px;">
    <h1>Edit book details</h1>
</div>

<% for(let i=0; i < bookData.length; i++) {%>
<div class="container card bg-light" style="width: 40rem;">
    <form action="/books/<%= bookData[i].book_id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Book Title</label>
            <input type="text" name="title" class="form-control" value="<%= bookData[i].title %>">
            <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Author First Name</label>
            <input type="text" name="author_fname" class="form-control" value="<%= bookData[i].author_fname %>">
        <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Author Last Name</label>
            <input type="text" name="author_lname" class="form-control" value="<%= bookData[i].author_lname %>">
        <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Book Category</label>
            <input type="text" name="category" class="form-control" value="<%= bookData[i].category %>">
        <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Release Year</label>
            <input type="number" name="release_year" class="form-control" value="<%= bookData[i].release_year %>">
    <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Number of Pages</label>
            <input type="number" name="pages" class="form-control" value="<%= bookData[i].pages %>">
        <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Book Price</label>
            <input type="number" name="price" class="form-control" value="<%= bookData[i].price %>">
        <input type="hidden" name="_method" value="PUT">
        </div>
        <div class="form-group">
            <label>Book Image</label>
            <input type="text" name="picture" class="form-control" value="<%= bookData[i].picture %>">
        <input type="hidden" name="_method" value="PUT">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% } %>

<%- include('../partials/footer'); -%>